<% layout("/layouts/boilerplate") %>

    <body>

        <div class="row mt-3">
            <div class="col-8 offset-3">

                <h3>Listing Details</h3>
            </div>
            <div class="card col-6 offset-3 show-card">
                <img src="<%=listing.image.url %>" class="card-img-top show-img" alt="Listing Image">
                <div class="card-body">
                    <p class="card-text"> <b>
                            <%= listing.title %>
                        </b></p>
                    <%= listing.description%> <br>
                        &#8377; <%= listing.price.toLocaleString("en-IN") %> <br>
                            <%= listing.location %> <br>
                                <%= listing.country %>



                </div>
            </div>
        </div>

        <div class="btns mb-5">
            
                

          
            <a href="/listings/<%=listing._id%>/book" class="btn  col-1 offset-2 btn-success ">Reserve </a> 
            <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark col-1 offset-1 btn-edit">Edit </a> 
           
            <form action="/listings/<%=listing._id%>?_method=DELETE" method="post">
                <button class="btn btn-dark offset-5 del-btn">DELETE</button>
            </form>
           

        </div>

    </body>

    <!-- show page -->