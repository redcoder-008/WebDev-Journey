<% layout ("layouts/boilerplate") %>
    <div class="row ">
        <div class="col-8 offset-2">




            <body>
                <h1 class="head">Edit Lisiting</h1>
                <form action="/listings/<%=listing._id%>?_method=put" method="post" novalidate class="needs-validation">
                    <div class="mb-3">
                        <label for="listing[title]" class="form-label ">Title</label>
                        <input type="text" name="listing[title]" value="<%= listing.title %>" class="form-control"
                            required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please enter title
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="listing[description]" class="form-label ">Description</label>
                        <input type="text" name="listing[description]" placeholder="Enter the description"
                            value="<%= listing.description %>" class="form-control" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please enter description
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="listing[filename]" class="form-label ">FileName</label>
                        <input type="text" name="listing[image.filename]" id="" value="<%= listing.image.filename %>"
                            class="form-control" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please enter filename
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="listing[url]" class="form-label ">Image Url</label>
                        <input type="text" name="listing[image.url]" id="" placeholder="Enter image url"
                            value="<%= listing.image.url %>" class="form-control" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please enter image url
                        </div>
                    </div>
                  
                    <div class="row">


                        <div class="mb-3  col-md-4">
                            <label for="listing[price]" class="form-label ">Price</label>
                            <input type="number" name="listing[price]" id="" placeholder="Enter Price"
                                value="<%= listing.price%>" class="form-control" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please enter price
                            </div>
                        </div>
                        <div class="mb-3 col-md-8">
                            <label for="listing[country]" class="form-label ">Country</label>
                            <input type="text" name="listing[country]" id="" placeholder="Enter Country"
                                value="<%= listing.country %>" class="form-control" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please enter country
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="listing[location]" class="form-label ">Location</label>
                        <input type="text" name="listing[location]" id="" placeholder="Enter Location"
                            value="<%= listing.location%>" class="form-control" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please enter location
                        </div>
                    </div>


                    <button class="btn btn-edit mb-4 btn-dark">Edit </button>
                </form>

            </body>
        </div>
    </div>